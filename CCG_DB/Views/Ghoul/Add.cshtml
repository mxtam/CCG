@model CCG_DB.Models.Ghoul
@{
    ViewData["Title"] = "Add";
}

<h1>Add ghoul</h1>
<form asp-action="Add" asp-controller="Ghoul">
   
    <p>
        <label asp-for="Name">Name</label><br/>
        <input type="text" asp-for="Name" /><br />
        <span asp-validation-for="Name" /><br />
    <p/>

    <p>
        <label asp-for="Rank">Rank</label><br />
        <select name="rank" asp-for="Rank">
            <option value="sss+">SSS+</option>
            <option value="sss">SSS</option>
            <option value="ss">SS</option>
            <option value="s">S</option>
            <option value="a">A</option>
            <option value="b">B</option>
            <option value="d">D</option>
            <option value="e">E</option>
            <option value="f">F</option>
        </select><br/>
    </p>
    <p>
        <label asp-for="Description">Description</label><br/>
        <textarea maxlength="255" cols="35" rows="8" asp-for="Description"></textarea><br />
        <span asp-validation-for="Description" />
    </p>
    <p>
        <label asp-for="ImageUrl">Add image URL</label><br />
        <input type="text" asp-for="ImageUrl"  >
        <span asp-validation-for="ImageUrl" />
    <p />
    <p>
        <input type="submit" value="Save" />
    </p>
    
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>


